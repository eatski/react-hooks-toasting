{
    "compilerOptions": {
      "sourceMap": true,
      // TSはECMAScript 5に変換
      "strict": true, 
      "target": "ESNEXT",
      // TSのモジュールはES Modulesとして出力
      "module": "es2015",
      // JSXの書式を有効に設定
      "jsx": "react",
      "moduleResolution": "node",
      "lib": [
        "es2017",
        "dom"
      ],
      "baseUrl":".",
      "rootDir": ".",
      "paths": {
        "@/*": ["src/*"]
      },
      "typeRoots": ["node_modules/@types"],
      "allowSyntheticDefaultImports":true,
      "resolveJsonModule": true
    }
  }